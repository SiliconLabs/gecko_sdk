project_name: "wisun_network_measurement"
label: "Wi-SUN - SoC Network Measurement"
description: "The Wi-SUN Network Measurement application provides a performance measurement solution based on the ping mechanism."
package: "wisun"
category: "Wi-SUN Examples"
quality: "production"

component:
# for wisun stack and default components
  - id: "segger_rtt"
  - id: "wisun_stack"
  - id: "wisun_util"
  - id: "wisun_stack_debug"
  - id: "sl_system"
  - id: "device_init"
  - id: "slist"
  - id: "sleeptimer"
  - id: "nvm3_default"
  - id: "micriumos_kernel"
  - id: "silabs_core_sl_malloc"
# radio config
  - id: "radio_config_brd_wisun_singlephy"
  - id: "restrictions_profile_wisun"     # xg12, xg23
  - id: "restrictions_profile_wisun_fsk" # xg25
#  - id: "restrictions_profile_wisun_ofdm" # xg25, not supported
# SDK components
  - id: "sl_wisun_app_cli"
  - id: "sl_wisun_ping"
  - id: "sl_wisun_network_measurement"
  - id: "simple_button"
    instance:
      - btn0
      - btn1
  - id: cli
    instance:
    - example

requires:
  - name: "cmsis_rtos2"
  - name: freertos_heap_3
    condition: [freertos]
source:
  - path: "app.c"
  - path: "app_init.c"
  - path: "app_custom_callback.c"
  - path: "main.c"
include:
  - path: "."
    file_list:
    - path: "app.h"
    - path: "app_init.h"
    - path: "app_custom_callback.h"
define:
  - name: "DEBUG_EFM"
configuration:
  - name: "SL_BOARD_ENABLE_VCOM"
    value: "1"
  - name: "SL_IOSTREAM_USART_VCOM_FLOW_CONTROL_TYPE"
    value: "usartHwFlowControlNone"
  - name: "SL_IOSTREAM_USART_VCOM_CONVERT_BY_DEFAULT_LF_TO_CRLF"
    value: "1"
  - name: SL_CLI_LOCAL_ECHO
    value: "(1)"
  - name: "SL_IOSTREAM_EUSART_VCOM_FLOW_CONTROL_TYPE"
    value: "eusartHwFlowControlNone"
  - name: "SL_IOSTREAM_EUSART_VCOM_CONVERT_BY_DEFAULT_LF_TO_CRLF"
    value: "1"
  - name: "OS_CFG_APP_HOOKS_EN"
    value: "1"
    condition: [micriumos_kernel]
  - name: "SL_HEAP_SIZE"
    value: "0xD000"
  - name: "configUSE_POSIX_ERRNO"
    value: "1"
    condition: [freertos]
  - name: "OS_CFG_ERRNO_EN"
    value: "1"
    condition: [micriumos_kernel]

  # SDK components config specialization
  - name: "SL_WISUN_PING_MAX_PAYLOAD_LENGTH"
    value: "1024"
  - name: "SL_WISUN_PING_PACKET_INTERVAL"
    value: "1"
  - name: "SOCKET_BUFFER_SIZE"
    value: "1048"
  - name: "WISUN_NETWORK_SIZE"
    value: "SL_WISUN_NETWORK_SIZE_SMALL"

readme:
  - path: ../../documentation/example/wisun_network_measurement/readme.md

other_file:
  - path: ../../documentation/example/wisun_network_measurement/readme_img0.png
  - path: ../../documentation/example/wisun_network_measurement/readme_img1.png
  - path: hw_filter_tags.yaml

ui_hints:
  highlight:
    - path: "config/rail/radio_settings.radioconf"
    - path: readme.md
      focus: true

#--------------------- Toolchain ------------------------
toolchain_settings:
  - option: optimize
    value: debug

