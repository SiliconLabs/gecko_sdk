{%- endif -%}
{% if config.deviceType is not none %}

//! Wi-SUN device type
#if !defined(WISUN_CONFIG_DEVICE_TYPE)
#define WISUN_CONFIG_DEVICE_TYPE                {{config.deviceType}}
