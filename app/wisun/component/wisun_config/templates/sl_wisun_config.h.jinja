{% if config.deviceProfile is not none %}

//! Wi-SUN device profile (LFN)
#if !defined(WISUN_CONFIG_DEVICE_PROFILE)
#define WISUN_CONFIG_DEVICE_PROFILE             {{config.deviceProfile}}
