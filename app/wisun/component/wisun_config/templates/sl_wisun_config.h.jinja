typedef struct {
  const uint8_t mac_list_num;
  const sl_wisun_mac_address_t mac_list[];
} wisun_config_mac_list_t;
{%- endif -%}
{%- endif -%}
{% if config.macAddress is not none %}

#define WISUN_CONFIG_MAC_ADDRESS_PRESENT
