#define WISUN_CONFIG_MODE_SWITCH_PHYS_NUMBER    {{config.modeSwitchPhys|length}}

//! Wi-SUN Mode Switch PHYs
extern const uint8_t wisun_config_ms_phys[];
{%- endif -%}
{%- endif -%}
