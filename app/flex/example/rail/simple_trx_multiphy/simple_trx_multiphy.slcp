#-------------- Template Contribution ----------------
template_contribution:
#------------------ CLI commands ---------------------
  - name: cli_command
    value:
      name: info
      handler: cli_info
      help: Unique ID of the MCU
  - name: cli_command
    value:
      name: send
      handler: cli_send_packet
      help: Send a packet
      argument:
      - type: uint8
        help: Select channel to send
  - name: cli_command
    value:
      name: rx_channel
      handler: cli_rx_channel
      help: Receive on a specified radio channel
      argument:
      - type: uint8
        help: Select channel to receive
  - name: cli_command
    value:
      name: rx_scan
      handler: cli_rx_scan
      help: Receive on both radio channel (time sharing)

#--------------------- Toolchain ------------------------
