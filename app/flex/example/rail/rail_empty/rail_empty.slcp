project_name: rail_empty
label: "Flex (RAIL) - Empty Example"
package: Flex
description: "The RAIL Empty project is a barebone RAIL app that can be a basis of a proprietary solutions.
This comes prepared with a Single PHY radio configurator and a basic callback function for RAIL.
With one click this baremetal sample app can be run on an OS, currently MicriumOS and FreeRTOS is supported."
category: RAIL Examples
quality: production

#---------------- UC/UP components -------------------
component:
  - id: radio_config_simple_rail_singlephy
  - id: sl_system
  - id: device_init
  - id: rail_util_init
    instance:
      - inst0
  - id: rail_util_recommended
#------------Memory Protection Unit-------------------
  - id: mpu

#-------------- Restriction rules -------------------
  - id: restrictions_profile_base
  - id: restrictions_profile_connect
  - id: restrictions_profile_long_range
  - id: restrictions_profile_wisun
  - id: restrictions_profile_wisun_fsk
  - id: restrictions_profile_wisun_ofdm
  - id: restrictions_profile_sun

#----------------- Require list ----------------------
requires:
  - name: a_radio_config
  - name: sl_simple_rail_os
    condition:
      - "kernel"

#----------------- Project files ---------------------
include:
  - path: .
    file_list:
    - path: app_init.h
    - path: app_process.h

source:
  - path: main.c
  - path: app_init.c
  - path: app_process.c

readme:
  - path: ../../../documentation/example/rail/rail_empty/readme.md

other_file:
  - path: "hw_filter_tags.yaml"

#------------ Configuration overrides ----------------
configuration:
  - name: SL_STACK_SIZE
    value: "2048"
  - name: SL_HEAP_SIZE
    value: "2048"
#------------- FreeRTOS OS        --------------------
  - name: configMINIMAL_STACK_SIZE
    value: "1024"
#------------- Micrium OS / SystemView --------------------
  - name: CPU_CFG_TS_32_EN
    value: "1"
  - name: OS_CFG_DBG_EN
    value: "1"
  - name: OS_CFG_TS_EN
    value: "1"
  - name: OS_CFG_SCHED_ROUND_ROBIN_EN
    value: "1"
  - name: OS_CFG_STAT_TASK_EN
    value: "1"
  - name: OS_CFG_TASK_PROFILE_EN
    value: "1"
#------------- Other project settings ----------------
  - name: SL_IOSTREAM_USART_VCOM_FLOW_CONTROL_TYPE
    value: "usartHwFlowControlNone"
  - name: SL_IOSTREAM_EUSART_VCOM_FLOW_CONTROL_TYPE
    value: "eusartHwFlowControlNone"
#------------- RAIL init, Project --------------------
