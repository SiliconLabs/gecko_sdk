project_name: soc_btmesh_sensor_client
package: Btmesh
label: Bluetooth Mesh - SoC Sensor Client
description: >
  This example demonstrates the Bluetooth Mesh Sensor Client Model. It 
  collects and displays sensor measurement data from remote device(s) 
  (eg soc_btmesh_sensor_server). The current status is displayed on the 
  LCD and also sent to UART. CLI commands can substitute button presses
  as on the selected board only one Push Button is wired. This example
  requires one of the Internal Storage Bootloader (single image) variants
  depending on device memory.
category: Bluetooth Mesh Examples
quality: production
component:
  - id: app_assert
  - id: app_log
  - id: bluetooth_feature_system
  - id: bootloader_interface
  - id: app_button_press
  - id: btmesh_event_log
  - id: btmesh_factory_reset
  - id: btmesh_feature_gatt_prov_bearer
  - id: btmesh_feature_relay
  - id: btmesh_provisioning_decorator
  - id: btmesh_proxy
  - id: btmesh_sensor_client
  - id: btmesh_stack
  - id: cli
    instance:
    - example
  - id: iostream_usart
    instance:
      - vcom
  - id: mpu
  - id: ota_dfu
  - id: rail_util_pti
  - id: simple_button
    instance:
      - btn0
  - id: simple_led
    instance:
      - led0
  - id: simple_timer

source:
  - path: app.c
  - path: app_out_log.c
  - path: local_cli_commands.c
  - path: main.c

include:
  - path: .
    file_list:
    - path: app.h

config_file:
  - override:
      component: gatt_configuration
      file_id: gatt_configuration_file_id
    path: gatt_configuration.btconf
    directory: btconf
  - override:
      component: btmesh_dcd_configuration
      file_id: dcd_configuration_file_id
    path: dcd_config.btmeshconf
    directory: btmeshconf

readme:
  - path: ../../documentation/example/soc_btmesh_sensor_client/readme.md

other_file:
  - path: ../../script/create_bl_files.bat
  - path: ../../script/create_bl_files.sh
  - path: ../../documentation/example/soc_btmesh_sensor_client/readme_img0.png
    folder: images
  - path: ../../documentation/example/soc_btmesh_sensor_client/readme_img1.png
    folder: images
  - path: ../../documentation/example/soc_btmesh_sensor_client/readme_img2.png
    folder: images
  - path: ../../documentation/example/soc_btmesh_sensor_client/readme_img3.png
    folder: images
  - path: ../../documentation/example/soc_btmesh_sensor_client/readme_img4.png
    folder: images
  - path: ../../documentation/example/soc_btmesh_sensor_client/readme_img5.png
    folder: images
  - path: ../../documentation/example/soc_btmesh_sensor_client/readme_img6.png
    folder: images
  - path: ../../documentation/example/soc_btmesh_sensor_client/readme_img7.png
    folder: images
  - path: ../../documentation/example/soc_btmesh_sensor_client/readme_img8.png
    folder: images

configuration:
  - name: APP_LOG_LEVEL
    value: "APP_LOG_LEVEL_INFO"
  - name: NVM3_DEFAULT_CACHE_SIZE
    value: 100
  - name: SL_BOARD_ENABLE_VCOM
    value: "1"
    condition:
      - "iostream_usart"
  - name: SL_CLI_NUM_HISTORY_BYTES
    value: "0"
    condition:
      - "device_sdid_205"
  - name: SL_HEAP_SIZE
    value: "0x4000"
  - name: SL_PSA_KEY_USER_SLOT_COUNT
    value: "0"
    condition:
      - psa_crypto
  - name: SL_STACK_SIZE
    value: "0x1000"

define:
- name: "SINGLE_BUTTON"
  value: "1"
- name: "SINGLE_LED"
  value: "1"

template_contribution:
  - name: cli_command
    value:
      name: info
      handler: info
      help: "Prints info about BT address and mesh UUID"
    condition:
      - cli

tag:
  - hardware:board_only
  - hardware:component:button:1
  - hardware:component:display:!ls013b7dh03
  - hardware:component:led:1
  - hardware:device:flash:512
  - hardware:device:ram:32
  - hardware:rf:band:2400
  - prebuilt_demo

ui_hints:
  highlight:
    - path: config/btconf/gatt_configuration.btconf
      focus: false
    - path: config/btmeshconf/dcd_config.btmeshconf
      focus: false
    - path: readme.md
      focus: true