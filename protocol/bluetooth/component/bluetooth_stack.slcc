template_contribution:
  - name: component_catalog
    value: bluetooth
  - name: power_manager_handler
    value:
      event: is_ok_to_sleep
      include: "sl_bluetooth.h"
      handler: sli_bt_is_ok_to_sleep
  - name: power_manager_handler
    value:
      event: sleep_on_isr_exit
      include: "sl_bluetooth.h"
      handler: sli_bt_sleep_on_isr_exit
  - name: bluetooth_stack_init
    value:
      function: "sl_bt_init_multiprotocol"
    condition:
      - "rail_lib_multiprotocol"
    priority: 10
  - name: event_handler
    value:
      event: stack_init
      include: "sl_bluetooth.h"
      handler: "sl_bt_init"
    unless:
      - "kernel"
    priority: 0
  - name: event_handler
    value:
      event: stack_init
      include: "sl_bt_rtos_adaptation.h"
      handler: "sl_bt_rtos_init"
    condition:
      - "kernel"
    priority: -1000
  - name: event_handler
    value:
      event: stack_process_action
      include: "sl_bluetooth.h"
      handler: "sl_bt_step"
    priority: 9
  - name: bluetooth_stack_init
    value:
      function: "sl_bt_init_coex_hal"
      include: "coexistence-ble.h"
    priority: 10
    condition:
      - "rail_util_coex"
  - name: application_type
    value: "APPLICATION_TYPE_BLUETOOTH_APP"
requires:
  - name: "bluetooth_gattdb_definition"
  - name: "sleeptimer"
  - name: "rail_lib"
  - name: "rail_util_pa"
  - name: "nvm_system"
  - name: "nvm3_default"
    condition:
      - "nvm3"
  - name: "device_supports_bluetooth"
  - name: "bluetooth_crypto"
  - name: "component_catalog"
  - name: "power_manager"
  - name: "bluetooth_rtos_adaptation"
    condition:
      - "kernel"
  - name: "cmsis_rtos2"
    condition:
      - "kernel"
  - name: "device_init"
  - name: "device_init_hfxo"
  - name: "sl_system"
recommends:
  - id: "psstore"
    condition:
      - "device_series_1"
  - id: "nvm3_lib"
    condition:
      - "device_series_2"
  - id: "librail_singleprotocol"
provides:
  - name: "bluetooth_api"
  - name: "bluetooth_stack"
  - name: "bluetooth_controller"
  - name: "wireless_stack"
    allow_multiple: true
