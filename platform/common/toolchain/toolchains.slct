schema:
  architecture:
    type: str
  device_opn:
    type: str
  device_restricted:
    type: bool
  board_id:
    type: str
  cpu:
    type: str
    enum:
      - cortex-m0+
      - cortex-m3
      - cortex-m4
      - cortex-m33
  fpu:
    type: str
    enum:
      - fpv4-sp
      - fpv5-sp
  optimize:
    type: str
    enum:
      - none
      - debug
      - speed
      - size
  preinclude:
    type: str
  linkerfile:
    type: str
  device_type:
    type: str
    enum:
      - embedded
      - host
  split_sections:
    type: str
    enum:
      - enabled
      - disabled
  nano_c_libs:
    type: str
    enum:
      - enabled
      - disabled
  fp16:
    type: str
    enum:
      - enabled
      - disabled
  gcc_compiler_option:
    type: str
  gcc_c_compiler_option:
    type: str
  gcc_c++_compiler_option:
    type: str
  gcc_linker_option:
    type: str
  iar_compiler_option:
    type: str
  iar_linker_option:
    type: str
exporter:
  - exporter_id: simplicity_studio
    setting:
      - tool: makefile.arm.gcc.compiler
        option: misc
        action: append
        value: "-g"

      - tool: makefile.arm.gcc.assembler
        option: misc
        action: append
        value: "-x assembler-with-cpp"

      - tool: linker
        option: generateMapFile
        value: true

      - tool: compiler
        option: c_standard
        value: c99
      - tool: compiler
        option: cxx_standard
        value: c++11
      - tool: compiler
        option: warnings.all
        value: true
      - tool: compiler
        option: warnings.extra
        value: true
      - tool: compiler
        option: warnings.pedantic
        value: false
      - tool: compiler
        option: warnings.are_errors
        value: false
      - tool: compiler
        option: optimization
        value: size # Optimize for size by default

      - tool: com.silabs.ide.si32.gcc.cdt.managedbuild.tool.gnu.c.linker.base
        option: com.silabs.ide.si32.gcc.cdt.managedbuild.tool.gnu.c.linker.circulardependency
        value: true
      - tool: com.silabs.ide.si32.gcc.cdt.managedbuild.tool.gnu.c.linker.base
        option: com.silabs.ide.si32.gcc.cdt.managedbuild.tool.gnu.c.linker.nostdlibs
        value: false
      - tool: com.silabs.ide.si32.gcc.cdt.managedbuild.tool.gnu.cpp.linker
        option: com.silabs.ide.si32.gcc.cdt.managedbuild.tool.gnu.cpp.linker.circulardependency
        value: true
      - tool: com.silabs.ide.si32.gcc.cdt.managedbuild.tool.gnu.c.compiler.base
        option: com.silabs.gnu.c.compiler.option.misc.otherlist
        action: append
        value: "-c"
      - tool: com.silabs.ide.si32.gcc.cdt.managedbuild.tool.gnu.cpp.compiler.base
        option: com.silabs.gnu.cpp.compiler.option.misc.otherlist
        action: append
        value: "-c"
      - tool: com.silabs.ide.si32.gcc.cdt.managedbuild.tool.gnu.c.compiler.base
        option: com.silabs.gnu.c.compiler.option.misc.otherlist
        action: append
        value: "-fmessage-length=0"
      - tool: com.silabs.ide.si32.gcc.cdt.managedbuild.tool.gnu.cpp.compiler.base
        option: com.silabs.gnu.cpp.compiler.option.misc.otherlist
        action: append
        value: "-fmessage-length=0"
    mapping:
      split_sections:
        enabled:
          - tool: compiler
            option: function_sections
            value: true
          - tool: compiler
            option: data_sections
            value: true
          - tool: makefile.arm.gcc.linker
            option: misc
            action: append
            value: "-Wl,--gc-sections"
        disabled: []
      nano_c_libs:
        enabled:
          - tool: makefile.arm.gcc.compiler
            option: misc
            action: append
            value: "--specs=nano.specs"
          - tool: linker
            option: nano_c_libs
            value: true
        disabled: []
      fp16:
        enabled:
          - tool: makefile.arm.gcc.compiler
            option: misc
            action: append
            value: "-mfp16-format=ieee"
          - tool: makefile.host.gcc.compiler
            option: misc
            action: append
            value: "-mfp16-format=ieee"
          - tool: com.silabs.ide.si32.gcc.cdt.managedbuild.tool.gnu.c.compiler.base
            option: com.silabs.gnu.c.compiler.option.misc.otherlist
            action: append
            value: "-mfp16-format=ieee"
          - tool: com.silabs.ide.si32.gcc.cdt.managedbuild.tool.gnu.cpp.compiler.base
            option: com.silabs.gnu.cpp.compiler.option.misc.otherlist
            action: append
            value: "-mfp16-format=ieee"
        disabled: []
      device_type:
        embedded:
          - tool: compiler
            option: omit_frame_pointer
            value: true
          # C++ options
          - tool: compiler
            option: no_exceptions
            value: true
          - tool: compiler
            option: no_rtti
            value: true
          - tool: compiler
            option: no_builtin
            value: true
        host: []
      cpu:
        cortex-m0+:
          - tool: toolchain
            option: cpu
            value: cortex-m0+
        cortex-m3:
          - tool: toolchain
            option: cpu
            value: cortex-m3
        cortex-m4:
          - tool: toolchain
            option: cpu
            value: cortex-m4
        cortex-m33:
          - tool: toolchain
            option: cpu
            value: cortex-m33
      fpu:
        fpv4-sp:
          - tool: toolchain
            option: fpu
            value: fpv4-sp
          - tool: toolchain
            option: float_abi
            value: softfp
        fpv5-sp:
          - tool: toolchain
            option: fpu
            value: fpv5-sp
          - tool: toolchain
            option: float_abi
            value: hard
      optimize:
        none:
          - tool: compiler
            option: optimization
            value: none
        debug:
          - tool: compiler
            option: optimization
            value: debug
        speed:
          - tool: compiler
            option: optimization
            value: speed
        size:
          - tool: compiler
            option: optimization
            value: size
      preinclude:
        - tool: compiler
          option: preinclude
          action: append
          value: "{{value}}"
        - tool: assembler
          option: preinclude
          action: append
          value: "{{value}}"
      linkerfile:
        - tool: linker
          option: linkerScript
          value: "{{value}}"
      device_opn:
        - tool: studio.ide.project
          option: device_opn
          value: "{{value}}"
      board_id:
        - tool: studio.ide.project
          option: board_id
          action: append
          value: "{{value}}"
      architecture: []
      gcc_compiler_option:
        - tool: makefile.arm.gcc.compiler
          option: misc
          action: append
          value: "{{value}}"
        - tool: makefile.host.gcc.compiler
          option: misc
          action: append
          value: "{{value}}"
        - tool: com.silabs.ide.si32.gcc.cdt.managedbuild.tool.gnu.c.compiler.base
          option: com.silabs.gnu.c.compiler.option.misc.otherlist
          action: append
          value: "{{value}}"
        - tool: com.silabs.ide.si32.gcc.cdt.managedbuild.tool.gnu.cpp.compiler.base
          option: com.silabs.gnu.cpp.compiler.option.misc.otherlist
          action: append
          value: "{{value}}"
      gcc_c_compiler_option:
        - tool: makefile.arm.gcc.compiler.c
          option: misc
          action: append
          value: "{{value}}"
        - tool: makefile.host.gcc.compiler.c
          option: misc
          action: append
          value: "{{value}}"
        - tool: com.silabs.ide.si32.gcc.cdt.managedbuild.tool.gnu.c.compiler.base
          option: com.silabs.gnu.c.compiler.option.misc.otherlist
          action: append
          value: "{{value}}"
      gcc_c++_compiler_option:
        - tool: makefile.arm.gcc.compiler.cpp
          option: misc
          action: append
          value: "{{value}}"
        - tool: makefile.host.gcc.compiler.cpp
          option: misc
          action: append
          value: "{{value}}"
        - tool: com.silabs.ide.si32.gcc.cdt.managedbuild.tool.gnu.cpp.compiler.base
          option: com.silabs.gnu.cpp.compiler.option.misc.otherlist
          action: append
          value: "{{value}}"
      gcc_linker_option:
        - tool: makefile.arm.gcc.linker
          option: misc
          action: append
          value: "{{value}}"
        - tool: makefile.host.gcc.linker
          option: misc
          action: append
          value: "{{value}}"
        - tool: com.silabs.ide.si32.gcc.cdt.managedbuild.tool.gnu.c.linker.base
          option: com.silabs.gnu.c.link.option.ldflags
          action: append
          value: "{{value}}"
        - tool: com.silabs.ide.si32.gcc.cdt.managedbuild.tool.gnu.cpp.linker.base
          option: com.silabs.gnu.cpp.link.option.flags
          action: append
          value: "{{value}}"
      iar_compiler_option:
        - tool: iar.ewp.arm.compiler
          option: IExtraOptions
          action: append
          value: "{{value}}"
      iar_linker_option:
        - tool: iar.ewp.arm.linker
          option: IlinkUseExtraOptions
          value: "1"
        - tool: iar.ewp.arm.linker
          option: IlinkExtraOptions
          action: append
          value: "{{value}}"
