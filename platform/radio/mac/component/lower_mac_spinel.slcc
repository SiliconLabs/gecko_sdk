source:

# OT Core files
  - path: "util/third_party/openthread/src/core/crypto/mbedtls.cpp"
 
# OT Logging files
  - path: "util/third_party/openthread/src/core/common/logging.cpp"

template_contribution:
  - name: component_catalog
    value: lower_mac_spinel
  - name: event_handler
    value:
      event: stack_process_action
      include: "lower-mac-spinel.h"
      handler: sli_lower_mac_tick_callback

config_file:
  - path: "platform/radio/mac/lower-mac-spinel-config.h"

toolchain_settings:
  - option: preinclude
    value: lower-mac-spinel-config.h

define:
  - name: "SPINEL_PLATFORM_HEADER"
    value: "\"spinel_platform.h\""
